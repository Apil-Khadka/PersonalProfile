---
import { resume } from "../data/resume";
---

<section id="experience" class="section experience-section">
  <div class="container">
    <div class="section-header">
      <h3>Experience & Leadership</h3>
      <p class="section-desc">My professional journey and key roles</p>
    </div>

    <div class="timeline">
      {
        resume.experience.map((job, index) => (
          <div class="timeline-item" style={`--index: ${index}`}>
            <div class="timeline-marker" />
            <div class="timeline-content">
              <div class="timeline-header">
                <h4>{job.title}</h4>
                <span class="company text-primary">{job.company}</span>
                {job.period && <span class="period">{job.period}</span>}
              </div>
              <p class="description">{job.description}</p>
              {job.achievements && (
                <ul class="achievements">
                  {job.achievements.map((achievement) => (
                    <li>{achievement}</li>
                  ))}
                </ul>
              )}
              {job.tech && (
                <div class="tech-badges">
                  {job.tech.map((t) => (
                    <span class="badge">{t}</span>
                  ))}
                </div>
              )}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .experience-section {
    position: relative;
  }

  .section-header {
    margin-bottom: var(--space-12);
    text-align: center;
  }

  .section-desc {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    margin-top: var(--space-2);
  }

  .timeline {
    position: relative;
    padding: var(--space-4) 0;
  }

  .timeline::before {
    content: "";
    position: absolute;
    left: 20px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(
      180deg,
      var(--color-primary),
      var(--color-secondary)
    );
    opacity: 0.5;
  }

  .timeline-item {
    position: relative;
    padding-left: var(--space-16);
    padding-bottom: var(--space-12);
    animation: fadeInLeft 0.6s ease-out forwards;
    opacity: 0;
    animation-delay: calc(var(--index) * 0.1s);
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .timeline-marker {
    position: absolute;
    left: 5px;
    top: 5px;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-secondary)
    );
    border: 3px solid var(--color-bg);
    box-shadow: 0 0 0 2px var(--color-border);
    transition: all 0.3s ease;
  }

  .timeline-item:hover .timeline-marker {
    transform: scale(1.2);
    box-shadow: 0 0 20px rgba(0, 217, 255, 0.5);
  }

  .timeline-content {
    background: var(--color-bg-card);
    border: 2px solid var(--color-border);
    padding: var(--space-6);
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .timeline-item:hover .timeline-content {
    border-color: var(--color-primary);
    box-shadow: 0 15px 40px rgba(0, 217, 255, 0.15);
    transform: translateX(8px);
  }

  .timeline-header {
    margin-bottom: var(--space-3);
  }

  .timeline-header h4 {
    margin: 0 0 var(--space-2) 0;
    font-size: 1.2rem;
    background: linear-gradient(
      135deg,
      var(--color-text-main),
      var(--color-accent)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .company {
    display: block;
    font-weight: 600;
    margin-bottom: var(--space-2);
    font-size: 1rem;
    color: var(--color-primary);
  }

  .period {
    display: inline-block;
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-left: var(--space-2);
    padding: var(--space-1) var(--space-3);
    background: var(--color-bg-subtle);
    border-radius: 20px;
  }

  .description {
    margin: var(--space-3) 0;
    font-size: 1rem;
    line-height: 1.6;
  }

  .achievements {
    list-style: none;
    padding: 0;
    margin: var(--space-4) 0;
    font-size: 0.95rem;
    color: var(--color-text-muted);
  }

  .achievements li {
    margin-bottom: var(--space-2);
    padding-left: var(--space-5);
    position: relative;
    line-height: 1.6;
  }

  .achievements li::before {
    content: "â–¸";
    position: absolute;
    left: 0;
    color: var(--color-primary);
    font-weight: bold;
  }

  .tech-badges {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-top: var(--space-4);
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-border);
  }

  .badge {
    display: inline-block;
    padding: var(--space-1) var(--space-3);
    font-size: 0.75rem;
    font-weight: 600;
    background: linear-gradient(
      135deg,
      var(--color-bg-subtle),
      var(--color-bg-card)
    );
    color: var(--color-primary);
    border: 1px solid var(--color-border);
    border-radius: 20px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .timeline-item:last-child {
    padding-bottom: 0;
  }

  @media (max-width: 768px) {
    .timeline::before {
      left: 14px;
    }

    .timeline-item {
      padding-left: var(--space-12);
    }

    .timeline-marker {
      left: 0;
      width: 28px;
      height: 28px;
    }

    .timeline-item:hover .timeline-content {
      transform: translateX(4px);
    }
  }
</style>
