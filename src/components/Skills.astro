---
import { resume } from "../data/resume";
---

<section id="skills" class="section">
  <div class="container">
    <h3>Technical Skills</h3>
    
    <div class="grid skills-grid">
      <div class="skill-category">
        <h4>Backend</h4>
        <div class="tags">
          {resume.skills.backend.map(skill => <span class="tag">{skill}</span>)}
        </div>
      </div>
      
      <div class="skill-category">
        <h4>Database</h4>
        <div class="tags">
          {resume.skills.database.map(skill => <span class="tag">{skill}</span>)}
        </div>
      </div>
      
      <div class="skill-category">
        <h4>Infrastructure & Tools</h4>
        <div class="tags">
          {resume.skills.infrastructure.map(skill => <span class="tag">{skill}</span>)}
        </div>
      </div>
      
      <div class="skill-category">
        <h4>Frontend</h4>
        <div class="tags">
          {resume.skills.frontend.map(skill => <span class="tag">{skill}</span>)}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .skills-grid {
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-8);
  }

  h4 {
    font-size: 1rem;
    margin-bottom: var(--space-3);
    color: var(--color-primary);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }
</style>
